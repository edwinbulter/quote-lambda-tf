<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 
        JSON format for CloudWatch Logs
        Benefits:
        - Stack traces appear as a single JSON field (easy to search)
        - Structured logging for CloudWatch Logs Insights queries
        - Automatic timestamp and level fields
        - Custom fields for filtering
    -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Stack traces as single field instead of multiple lines -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>20</shortenedClassNameLength>
                <exclude>^sun\..*</exclude>
                <exclude>^java\.lang\.reflect\..*</exclude>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>
            <!-- Add custom fields for filtering in CloudWatch -->
            <customFields>{"application":"quote-lambda-tf-backend"}</customFields>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>